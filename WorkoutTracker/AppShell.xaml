<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WorkoutTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WorkoutTracker.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Workout Tracker">

    <TabBar>
        <ShellContent Title="Today"
                      ContentTemplate="{DataTemplate views:TodayPage}" />
        <ShellContent Title="Exercises"
                      ContentTemplate="{DataTemplate views:ExercisesPage}" />
        <ShellContent Title="History"
                      ContentTemplate="{DataTemplate views:HistoryPage}" />
        <ShellContent Title="Charts"
                      ContentTemplate="{DataTemplate views:ChartsPage}" />
    </TabBar>

</Shell>
