<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutTracker.Views.TodayPage"
             Title="Today">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">

            <!-- Session header -->
            <Grid ColumnDefinitions="Auto,*">
                <Label Text="Session:" FontAttributes="Bold" />
                <Label Grid.Column="1"
               Text="{Binding CurrentSession.Id, StringFormat='ID {0}'}"
               IsVisible="{Binding CurrentSession, Converter={StaticResource NullToBoolConverter}}" />
            </Grid>

            <!-- Only show when no session started yet -->
            <Button Text="Start Session"
            Command="{Binding StartSessionCommand}"
            IsVisible="{Binding HasActiveSession, Converter={StaticResource InverseBoolConverter}}" />

            <!-- End Session button (only visible if a session is active) -->
            <Button Text="End Session"
            Command="{Binding EndSessionCommand}"
            IsVisible="{Binding HasActiveSession}" />
            
            <!-- Exercise picker -->
            <Picker Title="Exercise"
              ItemsSource="{Binding ExerciseOptions}"
              ItemDisplayBinding="{Binding Name}"
              SelectedItem="{Binding SelectedExercise}" />

            <!-- Inputs -->
            <Grid ColumnDefinitions="*,*,*">
                <Entry Keyboard="Numeric" Placeholder="Reps"      Text="{Binding Reps}" />
                <Entry Grid.Column="1" Keyboard="Numeric" Placeholder="Weight"   Text="{Binding Weight}" />
                <Entry Grid.Column="2" Keyboard="Numeric" Placeholder="RPE (opt)" Text="{Binding Rpe}" />
            </Grid>

            <Button Text="Add Set"
              Command="{Binding AddSetCommand}"
              HorizontalOptions="Fill"
              Margin="0,8,0,0" />

            <!-- Sets list: time | exercise | set # | reps | weight -->
            <CollectionView ItemsSource="{Binding TodaysSets}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="8" ColumnSpacing="16"
                  ColumnDefinitions="Auto,*,Auto,Auto,Auto">

                            <Label Grid.Column="0"
                     Text="{Binding TimestampUtc, StringFormat='{}{0:HH:mm}'}"
                     VerticalOptions="Center" />

                            <Label Grid.Column="1"
                     Text="{Binding ExerciseName}"
                     VerticalOptions="Center" />

                            <Label Grid.Column="2"
                     Text="{Binding SetNumber, StringFormat='Set {0}'}"
                     VerticalOptions="Center" />

                            <Label Grid.Column="3"
                     Text="{Binding Reps, StringFormat='{0} reps'}"
                     VerticalOptions="Center" />

                            <Label Grid.Column="4"
                     Text="{Binding Weight, StringFormat='{0} kg'}"
                     VerticalOptions="Center" />

                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
