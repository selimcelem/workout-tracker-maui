<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutTracker.Views.HistoryPage"
             Title="History">

    <RefreshView IsRefreshing="{Binding IsBusy}" Command="{Binding RefreshCommand}">
        <CollectionView ItemsSource="{Binding RecentSessions}"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged"
                        VerticalOptions="Fill">

            <CollectionView.EmptyView>
                <VerticalStackLayout Padding="24" Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="No sessions yet." FontAttributes="Bold" />
                    <Label Text="Start a session on the Today tab, then your history will appear here." FontSize="12" Opacity="0.7" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame HasShadow="False"
                           Padding="12"
                           Margin="0,6"
                           BorderColor="{DynamicResource BorderColor}"
                           CornerRadius="12">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="12">
                            <Label Text="{Binding Title}" FontAttributes="Bold" />
                            <Label Grid.Row="1" Text="{Binding Subtitle}" FontSize="12" Opacity="0.7" />
                            <Label Grid.Column="1" Text="{Binding Notes}" LineBreakMode="TailTruncation" MaxLines="2" FontSize="12" Opacity="0.6" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </RefreshView>
</ContentPage>
