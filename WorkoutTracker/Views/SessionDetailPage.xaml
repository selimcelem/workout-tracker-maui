<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutTracker.Views.SessionDetailPage"
             Title="Session Details">

    <CollectionView ItemsSource="{Binding Sets}"
                    VerticalOptions="Fill">
        <CollectionView.EmptyView>
            <VerticalStackLayout Padding="24"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center">
                <Label Text="No sets recorded for this session."
                       FontAttributes="Bold" />
            </VerticalStackLayout>
        </CollectionView.EmptyView>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="8"
                      ColumnDefinitions="Auto,*,Auto"
                      ColumnSpacing="12">
                    <Label Text="{Binding Time}" />
                    <Label Grid.Column="1" Text="{Binding ExerciseName}" />
                    <Label Grid.Column="2" Text="{Binding Summary}" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
